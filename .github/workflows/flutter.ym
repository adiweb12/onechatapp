name: Build OneChat Final

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Java
        uses: actions/setup-java@v4
        with:
          distribution: 'zulu'
          java-version: '17'

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.19.0'

      - name: Extract and Map Project
        run: |
          # 1. Extract files
          unzip -o OneChat.zip
          
          # 2. Move contents to root so lib/ and pubspec.yaml are at the top
          cp -r frontend/* . || true
          
          # 3. Create the android shell
          flutter create --platforms android .
          
          # 4. FORCE the paths in local.properties using absolute workspace variables
          echo "sdk.dir=$ANDROID_SDK_ROOT" > android/local.properties
          echo "flutter.sdk=$FLUTTER_ROOT" >> android/local.properties
          echo "flutter.versionName=1.0.0" >> android/local.properties
          echo "flutter.versionCode=1" >> android/local.properties
          echo "flutter.buildMode=release" >> android/local.properties
          
          # This is the "Magic" line for the 'Must provide Flutter source directory' error
          echo "flutter.sourceDir=$GITHUB_WORKSPACE" >> android/local.properties

          # 5. Inject the flutter extension to all subprojects (Plugin Fix)
          sed -i "/allprojects {/a \    subprojects {\n        ext.flutter = [\n            compileSdkVersion: 34,\n            minSdkVersion: 21,\n            targetSdkVersion: 34\n        ]\n    }" android/build.gradle

      - name: Final Build
        run: |
          flutter pub get
          # We use the absolute path to the project to leave no room for error
          flutter build apk --release --no-pub --dart-define=FLUTTER_BUILD_MODE=release

      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: OneChat-Working-APK
          path: build/app/outputs/flutter-apk/app-release.apk
